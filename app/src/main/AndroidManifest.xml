<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.yzernik.squeakand">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTodoActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_create_todo" />
        <activity
            android:name=".ViewTodoActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_view_todo" />
        <activity
            android:name=".ManageProfilesActivity"
            android:parentActivityName=".NewTodoActivity"
            android:label="@string/activity_manage_profiles" />
        <activity
            android:name=".NewProfileActivity"
            android:parentActivityName=".ManageProfilesActivity"
            android:label="@string/activity_create_profile" />
    </application>

</manifest>