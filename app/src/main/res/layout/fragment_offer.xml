<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.offer.OfferFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/offer_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/offer_payment_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/offer_pay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay" />


        <Button
            android:id="@+id/offer_view_lightning_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View lightning node"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>